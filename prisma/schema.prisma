generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

  model product {

   id Int @id @default(autoincrement())
   title String @unique
   description String
   price Float 
   createdAt DateTime  @default(now())
  

  }

  model usuario {

   id Int @id @default(autoincrement())
   nome String @unique 
   email String
   dataCriacao DateTime

  }

